<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#141517"
android:fitsSystemWindows="true"
android:orientation="vertical">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#17181a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="我的"
        android:textColor="#fff"
        android:textSize="@dimen/dp_19" />

    <ImageView
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_17"
        android:src="@mipmap/message_default" />

</android.support.v7.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="@mipmap/my_account_bg_default"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asyllabear"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="厉害厉害厉害了我的哥"
                    android:textColor="#bbb"
                    android:textSize="@dimen/dp_12" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/to_center"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:src="@mipmap/big_arrow_right" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/big_img"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_140"
            android:layout_below="@id/header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/bg_number_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="我的米粒"
                android:textColor="#f1f1f1"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="875"
                android:textColor="#fff"
                android:textSize="@dimen/dp_75" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_count"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_toRightOf="@id/tv_count"
                android:text="米粒"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="7dp"
                android:text="查看详情"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/little_right_arrow"
                android:textColor="#f1f1f1"
                android:textSize="@dimen/dp_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/line1"
            android:layout_width="@dimen/dp_341"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/big_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_32"
            android:background="#4d4d4d" />

        <LinearLayout
            android:id="@+id/table1"
            android:layout_width="@dimen/dp_341"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/line1"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:text="我的问答"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_17" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_17"
                    android:src="@mipmap/my_question_disabled" />

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignLeft="@id/question"
                    android:layout_below="@id/question"
                    android:src="@mipmap/dividing_line_disabled" />

            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#4d4d4d" />

            <RelativeLayout
                android:id="@+id/td2"
                android:layout_width="@dimen/dp_170"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:text="我的收藏"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_17" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_17"
                    android:src="@mipmap/collection_icons" />

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignLeft="@id/like"
                    android:layout_below="@id/like"
                    android:src="@mipmap/dividing_line_disabled" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/line2"
            android:layout_width="@dimen/dp_341"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/table1"
            android:layout_centerHorizontal="true"
            android:background="#4d4d4d" />

        <LinearLayout
            android:id="@+id/table2"
            android:layout_width="@dimen/dp_341"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/line2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:text="已购旅程"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_17" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_17"
                    android:src="@mipmap/buy_journey_icons" />

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignLeft="@id/shop"
                    android:layout_below="@id/shop"
                    android:src="@mipmap/dividing_line_disabled" />

            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#4d4d4d" />

            <RelativeLayout
                android:id="@+id/td4"
                android:layout_width="@dimen/dp_170"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:text="联系客服"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_17" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_17"
                    android:src="@mipmap/service_icons" />

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignLeft="@id/service"
                    android:layout_below="@id/service"
                    android:src="@mipmap/dividing_line_disabled" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/line3"
            android:layout_width="@dimen/dp_341"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/table2"
            android:layout_centerHorizontal="true"
            android:background="#4d4d4d" />

        <LinearLayout
            android:id="@+id/table3"
            android:layout_width="@dimen/dp_341"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/line3"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/newVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:text="检测最新版本"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_17" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_17"
                    android:src="@mipmap/new_edition_icons" />

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignLeft="@id/newVersion"
                    android:layout_below="@id/newVersion"
                    android:src="@mipmap/dividing_line_disabled" />

            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#4d4d4d" />

            <RelativeLayout
                android:id="@+id/td6"
                android:layout_width="@dimen/dp_170"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:text="赞扬 / 吐槽"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_17" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_17"
                    android:src="@mipmap/comment_icons" />

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignLeft="@id/comment"
                    android:layout_below="@id/comment"
                    android:src="@mipmap/dividing_line_disabled" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/line4"
            android:layout_width="@dimen/dp_341"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/table3"
            android:layout_centerHorizontal="true"
            android:background="#4d4d4d" />
    </RelativeLayout>

</ScrollView>

</RelativeLayout>
