<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141517"
    android:fitsSystemWindows="true"
    tools:context="com.example.day01.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolBar"
        android:background="@color/black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/dp_19"
            android:text="个人信息"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/header_shape"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            android:text="头像"/>

        <ImageView
            android:id="@+id/goto_img"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_71"
            android:layout_toLeftOf="@id/goto_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_17"
            android:src="@mipmap/ic_launcher_round"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            android:text="用户昵称"/>

        <ImageView
            android:id="@+id/goto_img2"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/goto_img2"
            android:layout_marginRight="@dimen/dp_17"
            android:textSize="@dimen/dp_15"
            android:textColor="#999"
            android:text="Asyllabear"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/header_shape"
        android:layout_marginTop="@dimen/dp_19">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            android:text="性别"/>

        <ImageView
            android:id="@+id/goto_img3"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/goto_img3"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_15"
            android:textColor="#999"
            android:text="男"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/header_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            android:text="个人简介"/>

        <ImageView
            android:id="@+id/goto_img4"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/goto_img4"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_15"
            android:textColor="#999"
            android:text="Salud"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/header_shape"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            android:text="修改密码"/>

        <ImageView
            android:id="@+id/goto_img5"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/header_shape"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_15"
            android:textColor="#fa6a13"
            android:text="退出登录"/>

    </RelativeLayout>

</LinearLayout>
